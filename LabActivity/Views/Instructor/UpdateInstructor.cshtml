@{
}
@model Instructor;
<h1>Update Instructor</h1>
<form asp-action="UpdateInstructor" asp-controller="Instructor" method="post">
    <div class="row">
        <div class="form-group col">
            <label asp-for="Id" readonly>ID Number</label>
            <input class="form-control" asp-for="Id" aria-describedby="IdHelp" readonly>
        </div>
        <br />
        <div class="form-group col">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" autocomplete="off">
        </div>
        <br />
        <div class="form-group col">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" autocomplete="off">
        </div>
    </div>
    <br />

    <div class="row">
        <div class="form-group col">
            <label asp-for="HiringDate">Hiring Date</label>
            <input asp-for="HiringDate" class="form-control">
        </div>
        <div class="form-group col">
            <label asp-for="InstructorRank">Rank</label>
            <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="RankHelp" placeholder="Select Instructor Rank" asp-for="InstructorRank">
            </select>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="form-check form-switch">
            <label asp-for="IsTenured">Is Tenured</label>
            <input asp-for="IsTenured" class="form-check-input" type="checkbox" role="switch">
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-warning">Submit</button>
    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
</form>